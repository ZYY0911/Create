<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="      个人基本信息:"
            android:textColor="#000"
            android:textSize="40sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bt_edit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/gbg"
            android:text="编辑"
            android:textSize="30sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/TextAppearance.Design.Error">

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="姓名"
                            android:singleLine="true"
                            android:textSize="30sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/TextAppearance.Design.Error">

                        <EditText
                            android:id="@+id/et_province"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="籍贯"
                            android:singleLine="true"
                            android:textSize="30sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/TextAppearance.Design.Error">

                        <EditText
                            android:id="@+id/et_sex"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="性别"
                            android:singleLine="true"
                            android:textSize="30sp" />


                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_photo"
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        android:id="@+id/add_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rbg"
                        android:text="上传照片"
                        android:textColor="#fff"
                        android:textSize="30sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:errorTextAppearance="@style/TextAppearance.Design.Error">

                    <EditText
                        android:id="@+id/et_tel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="电话"
                        android:singleLine="true"
                        android:textSize="30sp" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:errorTextAppearance="@style/TextAppearance.Design.Error">

                    <EditText
                        android:id="@+id/et_birth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="出生年月"
                        android:singleLine="true"
                        android:textSize="30sp" />


                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:errorTextAppearance="@style/TextAppearance.Design.Error">

                    <EditText
                        android:id="@+id/et_major"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:hint="专业"
                        android:singleLine="true"
                        android:textSize="30sp" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:errorTextAppearance="@style/TextAppearance.Design.Error">

                    <EditText
                        android:id="@+id/et_school"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="毕业学校"
                        android:singleLine="true"
                        android:textSize="30sp" />


                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:errorTextAppearance="@style/TextAppearance.Design.Error">

                    <EditText
                        android:id="@+id/et_gzjl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="工作经历"
                        android:singleLine="true"
                        android:textSize="30sp" />


                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:errorTextAppearance="@style/TextAppearance.Design.Error">

                    <EditText
                        android:id="@+id/et_xl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="学历"
                        android:singleLine="true"
                        android:textSize="30sp" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:errorTextAppearance="@style/TextAppearance.Design.Error">

                    <EditText
                        android:id="@+id/et_jyyx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="就业意向"
                        android:singleLine="true"
                        android:textSize="30sp" />


                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:errorTextAppearance="@style/TextAppearance.Design.Error">

                    <EditText
                        android:id="@+id/et_jx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="奖项"
                        android:singleLine="true"
                        android:textSize="30sp" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:errorTextAppearance="@style/TextAppearance.Design.Error">

                    <EditText
                        android:id="@+id/et_yx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="邮箱"
                        android:singleLine="true"
                        android:textSize="30sp" />


                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/bt_save"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="40dp"
                    android:background="@drawable/gbg"
                    android:text="保存"
                    android:textSize="30sp" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>