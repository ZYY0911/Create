<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/q_bk"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_yhzc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="注册用户"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户登入"
            android:textColor="#1F3864"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/tv_zhma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="找回密码"
            android:textColor="#000"
            android:textSize="30dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#5B9BD5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_ymh"
            android:layout_width="550dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/q_bk2"
            android:gravity="center"
            android:hint="请输入用户名" />

        <EditText
            android:id="@+id/et_mima"
            android:layout_width="550dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/q_bk2"
            android:gravity="center"
            android:hint="请输入密码" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="50dp"
                android:text="记住密码"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/cb_2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="50dp"
                android:text="自动登入"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_qd"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/q_jy"
                android:text="确定"
                android:textSize="30dp"
                android:textColor="#696767"/>

            <Button
                android:id="@+id/bt_qx"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/q_jy"
                android:text="取消"
                android:textSize="30dp"
                android:textColor="#696767"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>