<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
   <LinearLayout
       android:layout_width="0dp"
       android:layout_weight="3"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_xm"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="姓名"
               android:textSize="30dp"
               android:gravity="center"
               android:textColor="#000"/>
           <TextView
               android:id="@+id/tv_xb"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="性别"
               android:textSize="30dp"
               android:gravity="center"
               android:textColor="#000"/>
           <TextView
               android:id="@+id/tv_zy"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="专业"
               android:textSize="30dp"
               android:gravity="center"
               android:textColor="#000"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_byyx"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="毕业学校"
               android:textSize="30dp"
               android:gravity="center"
               android:textColor="#000"/>
           <TextView
               android:id="@+id/tv_xl"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="学历"
               android:textSize="30dp"
               android:gravity="center"
               android:textColor="#000"/>
           <TextView
               android:id="@+id/tv_gzjl"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="工作经历"
               android:textSize="30dp"
               android:gravity="center"
               android:textColor="#000"/>



       </LinearLayout>

   </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_tx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/sex"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_csny"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="出生年月"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_hj"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="获奖"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_yj"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="邮件"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_dh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="电话"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#000"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tcah"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="特长爱好"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_jg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="籍贯"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#000"/>
    </LinearLayout>
    <Button
        android:id="@+id/bt_xz"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#fff"
        android:textSize="30dp"
        android:text="下载"
        android:background="#03A9F4"/>
</LinearLayout>