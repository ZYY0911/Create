<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/q_bk"
        android:text="用户注册"
        android:textColor="#1F3864"
        android:textSize="50dp"
        android:gravity="center"/>
    <EditText
        android:id="@+id/zc_yhm"
        android:layout_width="550dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/q_bk2"
        android:gravity="center"
        android:hint="输入用户名" />
    <EditText
        android:id="@+id/zc_mima"
        android:layout_width="550dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/q_bk2"
        android:gravity="center"
        android:hint="输入密码" />
    <EditText
        android:id="@+id/zc_zmima"
        android:layout_width="550dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/q_bk2"
        android:gravity="center"
        android:hint="在输入一次密码" />
    <EditText
        android:id="@+id/zc_yx"
        android:layout_width="550dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/q_bk2"
        android:gravity="center"
        android:hint="输入邮箱" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zc_qd"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/q_jy"
            android:text="确定"
            android:textSize="30dp"
            android:textColor="#696767"/>

        <Button
            android:id="@+id/zc_qx"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/q_jy"
            android:text="取消"
            android:textSize="30dp"
            android:textColor="#696767"/>
    </LinearLayout>
</LinearLayout>