<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/z_head2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/image_photo"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal" />



                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/TextAppearance.Design.Error">

                        <EditText
                            android:id="@+id/et_gys_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="供应商"
                            android:singleLine="true"
                            android:textSize="30sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/TextAppearance.Design.Error">

                        <EditText
                            android:id="@+id/et_gys_num"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="供应商编号"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textSize="30sp" />


                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/TextAppearance.Design.Error">

                        <EditText
                            android:id="@+id/et_gys_city"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="所在城市"
                            android:singleLine="true"
                            android:textSize="30sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/TextAppearance.Design.Error">

                        <EditText
                            android:id="@+id/et_gys_location"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="地点"
                            android:singleLine="true"
                            android:textSize="30sp" />


                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/TextAppearance.Design.Error">

                        <EditText
                            android:id="@+id/et_gys_law"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="法人"
                            android:singleLine="true"
                            android:textSize="30sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/TextAppearance.Design.Error">

                        <EditText
                            android:id="@+id/et_gys_people"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="联系人"
                            android:singleLine="true"
                            android:textSize="30sp" />


                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/TextAppearance.Design.Error">

                        <EditText
                            android:id="@+id/et_gys_tel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="电话"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textSize="30sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/TextAppearance.Design.Error">

                        <EditText
                            android:id="@+id/et_gys_range"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="业务范围"
                            android:singleLine="true"
                            android:textSize="30sp" />


                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="当前暂无商品列表"
            android:textColor="#000"
            android:textSize="30sp" />


    </LinearLayout>


</LinearLayout>